* {
	box-sizing border-box
}

//vars
logoFont = 'Pacifico'
mainFont = 'Nunito'
secondFont = 'Raleway'

body, html {
	margin: 0
	padding: 0
	width 100%
	height 100%
	font-family: mainFont
}

a {
	text-decoration: none
	color: rgba(0, 198, 250, 1);
}

ul, li, ol {
	margin: 0
	padding: 0
	list-style none
}

p, h1, h2, h3, h4, h5, h6 {
	padding: 0
	margin: 0
}

img {
	width 100%
	height 100%
}

.main {
	padding: 20px
	padding-top 0
	
	&-header {
		width 100%
		padding-top 10px
		padding-bottom 10px
		
		&__heading {
			width 50%
			display: block
			margin: 0 auto
			font-size 100px
			text-align: center
			font-family: logoFont
			
			a {
				width 100%
			}
		}
	}
}

.header {
	text-align: center
	
	&-heading {
		text-transform: uppercase
		text-align: center
		font-family: mainFont
	}
}

.photo {
	&-list {
		width 100%
		margin: 0
		padding: 0
		font-size 0
		text-align: center
	}
	
	&-item {
		display: inline-block
		width calc(25% - 12px)
		font-size: 16px
		margin-right: 10px
		margin-bottom 10px
		vertical-align: top
		box-shadow 0 0 5px 1px rgba(0, 0, 0, .5)
		
		&-wrap {
			position: relative
			border-bottom 1px solid rgba(0, 198, 250, 1)
			
			span {
				padding 10px
				display: block
			}		
		}
		
		&-link {
			display: inline-block
			width 100%
			height 100%
			
			img {
				box-shadow 0 0 5px 1px rgba(0, 0, 0, .5)
			}
			
			span {
				font-family: secondFont
			}
		}
	}
	
	&-likes {
		display flex
		
		&-button {
			width 50%
			display inline-block
			background transparent
			border-right 1px solid rgba(0, 198, 250, 1)
			border-bottom 1px solid rgba(0, 198, 250, 1)
			
			button {
				border none
				width 100%
				height 100%
				background transparent
				font-size 16px
				color pink
				
				&:hover {
					cursor pointer
				}
			}
		}
		
		&-link {
			width 50%
			border-bottom 1px solid rgba(0, 198, 250, 1)
			
			a {
				display inline-block;
				vertical-align: top;
				width 100%
				height 100%
				padding 10px
			}
		}
	}
}

.single {
	font-size 0
	
	.photo-item, .comments {
		display: inline-block
		vertical-align: top
		width 50%
	}
	
	.photo-item {
		margin: 0
		
		&-link {
			&:hover {
				cursor: default
			}
		}
	}
	
	.comments {
		font-size 16px
		padding-left 20px

		&-list {
			border-top 1px solid #ccc
			border-right 1px solid #ccc
		}
		
		&-form {
			height 25px
			
			&__input {
				display: inline-block
				height 100%
				width 50%
				padding-left 10px
				font-size 14px
				border 1px solid #ccc
				border-top none
				
				&:first-child {
					border-right: none
				}
			}
			
			.comment {
				font-family: Raleway
				font-style italic
			}
		}
	}
	
	.comment {
		&-item {
			border-bottom 1px solid #ccc
			padding 15px 10px 15px 0 
			
			&:last-child {
				// border-bottom: none
			}
			
			&__author {
				font-weight: 900
			}
			
			&__comment {
				font-family: Raleway
				
			}
		}
	}
}



















